/*
tsconfig.app.json 
"웹앱" 코드에만 적용되는 타입스크립트 설정, 주로 브라우저와 관련된 옵션 
jsx 설정, dom 관련 옵션 설정 
*/
{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022", // ES2022 문법 수준으로 변환 (최신 js 지원)
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // dom api와 최신 js 내장 객체(document, fetch, map, set 등)
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // react17+ 방식의 jsx 컴파일 사용

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
